extends ../template/template.pug

//- mixin free-space(props={})    задает отступ по ширине и/или высоте
//- mixin block-lib(props={})               размещение блока без собственного заголовка
//- mixin block-lib-self-title(props={})    размещение блока с собственным заголовком

block meta
  meta(name="keywords", content="toxin, form elements")
  meta(name="description" content="Учебный проект FSD. Второе задание. Лист form-elements")

block title
  | Form Elements

block main
  section(class="" +elements_F_E )
    .elements-form-elements__logo
      +logo({mods: 'gray'})
  +free-space({height: '60px'})

  section(class="" +elements_F_E )
    //- Левый блок
    .elements-form-elements__column
      +block-lib({title: 'TEXT FIELD', mods:'DEFAULT', width: '320px'})
        +text-field({placeholder: 'Email'})

      +block-lib({title: 'TEXT FIELD', mods:'HOVER / FOCUS', width: '320px'})
        +text-field({mods: 'focused', placeholder: 'This is pretty awesome'})

      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '320px'})
        +dropdown({
          moduleClass: 'dropdown-visitors',
          isBtnClear: true,
          isBtnSubmit: true,
          dropStrings: [
            {lineTitle: 'ВЗРОСЛЫЕ', maxCount: '5'},
            {lineTitle: 'ДЕТИ', maxCount: '5'},
            {lineTitle: 'МЛАДЕНЦЫ', maxCount: '5',
            isCountSeparate: true,
            namingForCount: 'младенец,младенца,младенцев'}
          ],
          namingForAll: 'гость,гостя,гостей',
          namingForEmpty: 'Сколько гостей'
          })

      +block-lib({title: 'MASKED-TEXT-FIELD', mods: 'DEFAULT', width: '320px'})
        +masked-text-field({
          placeholder: 'ДД.ММ.ГГГ',
          maskType: 'date'})

      +block-lib({width: '320px'})
        +free-space({height: '14px'})
        .elements__container
          .elements__half-column
            +block-lib({title: 'DATE DROPDOWN', width: '150px'})
              +date-dropdown({})

          .elements__half-column
            +block-lib({title: 'DATE DROPDOWN', width: '150px'})
              +date-dropdown({placeholder: '19.08.2019'})

      +block-lib({title: 'filter date dropdown', width: '266px'})
        +filter-date-dropdown({placeholder: '19 авг - 23 авг'})

      +free-space({height: '20px'})
      +block-lib({title: 'SUBSCRIPTION TEXT FIELD', width: '266px'})
        +subscription-text-field({placeholder: 'Email'})


    .elements-form-elements__column
      +block-lib-self-title({width: '222px'})
          +checkbox-buttons({
            listTitle: 'CHECKBOX BUTTONS',
            moduleClass: 'check-list-buttons',
            dropStrings: [
              {dataName: 'checkbox-smoking',
              labelTitle: 'Можно курить'},
              {dataName: 'checkbox-pets',
              labelTitle: 'Можно с питомцами',
              checked: true},
              {dataName: 'checkbox-guests',
              labelTitle: 'Можно пригласить гостей (до 10 человек)',
              checked: true},
              ]
            })
      +free-space({height: '22px'})

      +free-space({height: '22px'})
      +block-lib-self-title({width: '220px'})
      //-радиобаттон

      +free-space({height: '16px'})
      +block-lib({title: 'TOGGLE', width: '320px'})
        +free-space({height: '10px'})
        //- получатель спец предложения

      +free-space({height: '24px'})
      +block-lib({title: 'LIKE BUTTON', width: '90px'})
        +free-space({height: '10px'})

      +free-space({height: '20px'})
      +block-lib({title: 'RATE-BUTTON', width: '260px'})

    .elements-form-elements__column
      +block-lib-self-title({width: '266px'})

      +free-space({height: '12px'})
      +block-lib({title: 'BUTTONS', width: '218px'})
        +free-space({height: '12px'})

      +block-lib-self-title({title: '', width: '218px'})
        +free-space({height: '8px'})

      +block-lib({title: '', width: '142px'})

      +block-lib({title: '', width: '320px'})
        +buttons({
          lineTitle: 'ПЕРЕЙТИ К ОПЛАТЕ',
          mods: 'full, arrow, big'
          })

      +free-space({height: '20px'})
      +block-lib({title: 'PAGINATION', width: "240px"})
        +free-space({height: '10px'})

  +free-space({height: '79px'})
  section(class="" +elements_F_E )
    .elements-form-elements__column
      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '266px'})

      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '266px'})

    .elements-form-elements__column
      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '320px'})

    .elements-form-elements__column
      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '320px'})

  +free-space({height: '137px'})
  section(class="" +elements_F_E )
    .elements-form-elements__column
      +block-lib-self-title({width: '266px'})

      +block-lib-self-title({width: '266px'})

    .elements-form-elements__column
      +free-space({height: '14px'})
      +block-lib-self-title({width: '266px'})

    .elements-form-elements__column
      +free-space({height: '14px'})
      +block-lib({title: 'BULLET LIST', width: '280px'})

  +free-space({height: '190px'})
  section.elements
    .elements-form-elements__column
      +block-lib({ width: '280px'})

    .elements-form-elements__column
      +free-space({height: '7px'})
      +block-lib({width: '712px'})
        +comment({
          user:    'Мурад Сарафанов',
          photo:   './images/avatar.png',
          date:    '5 дней назад',
          like:    '12',
          likeChecked: true,
          text:    'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
        })